<Window x:Class="WPF._Intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF._Intro"
        mc:Ignorable="d"
        Title="Blabla" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition MaxWidth="300" Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Button Name="button0" Grid.Row="0" Background="Azure" Content="0" FontSize="30" Click="Button_Click"/>
        <Button Name="button1" Grid.Row="1" Grid.Column="1" Background="Azure" Content="1" FontSize="30" Click="Button_Click"/>
        <Button Name="button2" Grid.Row="0" Grid.Column="2" Background="Azure" Content="2" FontSize="30"/>
        <TextBox Name="textBox1" Grid.Row="0" Background="Azure" Grid.Column="1"></TextBox>
        <TextBlock Name="textBox2" Grid.Row="0" Background="Azure" Grid.Column="1"></TextBlock>
    </Grid>
</Window>
